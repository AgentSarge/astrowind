---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';

const contactSchemaData = {
  contactPoint: {
    "@type": "ContactPoint",
    "contactType": "sales",
    "availableLanguage": "English",
    "areaServed": "US",
    "serviceType": "Sales Intelligence Platform"
  }
};
---

<SeoMeta 
  title="Join SalesTag Early Access â€“ AI Sales Intelligence Platform"
  description="Request early access to SalesTag's AI-powered sales conversation capture and coaching platform. Join field sales teams improving their close rates."
  url="https://salestag.io/subscribe"
  image="/og/subscribe.jpg"
  schemaType="ContactPage"
  schemaData={contactSchemaData}
/>

<PageLayout>
  <main class="px-4 py-16 mx-auto max-w-2xl">
    <h1 class="text-4xl font-bold mb-8 text-center">Join the SalesTag Early Access List</h1>
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 rounded-lg p-8 shadow-sm">
      <h2 class="text-2xl font-semibold mb-6 dark:text-gray-100">Request Early Access</h2>
      <p class="text-gray-600 dark:text-gray-300 mb-8">
        Join the waitlist to be among the first to experience SalesTag. We'll keep you updated on our progress and notify you when early access becomes available.
      </p>
      
      <form action="/api/subscribe" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Full Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white dark:bg-gray-700 dark:text-gray-100"
            placeholder="John Smith"
          >
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Work Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white dark:bg-gray-700 dark:text-gray-100"
            placeholder="john@company.com"
          >
        </div>
        
        <div>
          <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Company</label>
          <input 
            type="text" 
            id="company" 
            name="company" 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white dark:bg-gray-700 dark:text-gray-100"
            placeholder="Acme Solar"
          >
        </div>
        
        <div>
          <label for="vertical" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sales Vertical</label>
          <select 
            id="vertical" 
            name="vertical" 
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white dark:bg-gray-700 dark:text-gray-100"
          >
            <option value="">Select your industry</option>
            <option value="solar">Solar</option>
            <option value="roofing">Roofing</option>
            <option value="smart-home">Smart Home</option>
            <option value="pest-control">Pest Control</option>
            <option value="security">Security/Alarms</option>
            <option value="automotive">Automotive</option>
            <option value="other">Other</option>
          </select>
        </div>
        <button 
          type="submit" 
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-md shadow-sm transition focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Get Early Access
        </button>
      </form>
    </div>
  </main>
</PageLayout> 