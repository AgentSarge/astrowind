---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import CallToActionBanner from '~/components/ui/CallToActionBanner.astro';

const metadata = {
  title: 'SalesTag ‚Äî AI Sales Memory, Built for Field Teams',
  ignoreTitleTemplate: true,
};
---

<SeoMeta 
  title="SalesTag ‚Äî AI Sales Memory, Built for Field Teams"
  description="SalesTag captures, tags, and stores real sales conversations using wearable badges and LLMs. Transform door-to-door pitches into valuable coaching data and AGI-ready training material."
  url="https://salestag.io/"
  image="/og/home.jpg"
  schemaType="WebSite"
/>

<PageLayout metadata={metadata}>
  <main class="px-4 py-16 mx-auto max-w-6xl">
    <!-- Hero Section -->
    <div class="text-center mb-20">
      <h1 class="text-5xl font-bold mb-8 max-w-4xl mx-auto">AI Sales Memory, Built for Field Teams</h1>
      
      <p class="text-xl mb-12 text-gray-600 max-w-2xl mx-auto">
        SalesTag captures, tags, and stores real sales conversations using a wearable badge and LLMs. Transform every door-to-door pitch into valuable coaching data and AGI-ready training material.
      </p>

      <!-- Hero CTA -->
      <div class="mb-20">
        <CallToActionBanner 
          title="Request Early Access"
          description="Join forward-thinking sales teams who are already using SalesTag to transform their conversations into valuable insights."
          buttonText="Join Waitlist"
          variant="hero"
        />
      </div>
    </div>

    <!-- Features Grid -->
    <section class="mb-20">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
          <div class="text-2xl font-bold mb-4 text-blue-600">üé§ Smart Audio Capture</div>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            Hands-free recording through wearable badges. Capture every conversation without interrupting your natural sales flow.
          </p>
        </div>
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
          <div class="text-2xl font-bold mb-4 text-green-600">üè∑Ô∏è AI-Powered Tagging</div>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            Automatically detect objections, pain points, and buying signals. Let AI identify the moments that matter most.
          </p>
        </div>
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 rounded-lg p-8 shadow-sm hover:shadow-md transition-shadow">
          <div class="text-2xl font-bold mb-4 text-purple-600">üìä Performance Insights</div>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            Transform conversations into coaching data. Track what works, identify improvement areas, and scale your best performers.
          </p>
        </div>
      </div>
    </section>

    <!-- Industry Callout -->
    <section class="mb-20">
      <div class="bg-gray-50 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-semibold mb-6 scroll-mt-24">Built for High-Trust Industries</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          SalesTag specializes in verticals where personal relationships and trust matter most.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <span class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full font-medium">Solar</span>
          <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full font-medium">Roofing</span>
          <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full font-medium">Smart Home</span>
          <span class="px-4 py-2 bg-red-100 text-red-800 rounded-full font-medium">Security</span>
          <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full font-medium">Pest Control</span>
          <span class="px-4 py-2 bg-gray-100 text-gray-800 rounded-full font-medium">Automotive</span>
        </div>
      </div>
    </section>

    <!-- Bottom CTA Section -->
    <section class="mb-20">
      <CallToActionBanner 
        title="Ready to Transform Your Sales Process?"
        description="Join forward-thinking sales teams who are already using SalesTag to capture, analyze, and improve their conversations."
      />
    </section>
  </main>

  <!-- Sticky CTA Footer Banner -->
  <div class="fixed bottom-0 left-0 right-0 bg-blue-600 text-white p-4 z-50 shadow-lg">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <div>
        <p class="font-semibold">Unlock SalesTag Today</p>
        <p class="text-blue-100 text-sm">Join teams improving their close rates with AI-powered insights</p>
      </div>
      <div class="flex gap-3">
        <a href="/subscribe" class="px-6 py-2 bg-white text-blue-600 rounded-lg font-medium hover:bg-gray-100 transition-colors">
          Join Waitlist
        </a>
        <button onclick="this.parentElement.parentElement.parentElement.style.display='none'" class="px-4 py-2 text-blue-100 hover:text-white transition-colors">
          ‚úï
        </button>
      </div>
    </div>
  </div>
</PageLayout>
