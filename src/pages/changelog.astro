        <!-- Roadmap Items -->
        <div class="space-y-8">
          <!-- v1.1 - AI Coaching Engine -->
          <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-200 dark:border-gray-600">
