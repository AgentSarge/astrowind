---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import CallToActionBanner from '~/components/ui/CallToActionBanner.astro';

const changelogSchemaData = {
  releases: [
    {
      "@type": "CreativeWork",
      "name": "SalesTag v1.0.0",
      "description": "Initial public launch with core conversation capture, AI tagging, and analytics capabilities",
      "datePublished": "2025-07-12",
      "author": {
        "@type": "Organization",
        "name": "SalesTag"
      },
      "about": {
        "@type": "SoftwareApplication",
        "name": "SalesTag",
        "applicationCategory": "Sales Analytics Software"
      }
    }
  ]
};
---

<SeoMeta 
  title="SalesTag Changelog ‚Äì Product Updates & Version History"
  description="Track SalesTag's development progress and feature updates. View complete version history and release notes for our AI sales intelligence platform."
  url="https://salestag.io/changelog"
  image="/og/changelog.jpg"
  schemaType="CreativeWorkSeries"
  schemaData={changelogSchemaData}
/>

<PageLayout>
  <main class="px-4 py-16 mx-auto max-w-4xl">
    <div class="prose prose-lg max-w-none dark:prose-invert">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-6 flex items-center justify-center">
          üìú SalesTag Changelog
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Stay updated with the latest features, improvements, and fixes.
        </p>
      </div>

      <!-- Navigation Links -->
      <div class="flex justify-center mb-12">
        <div class="flex space-x-1 bg-gray-100 dark:bg-gray-800 rounded-lg p-1">
          <span class="px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-md">
            üìú Changelog
          </span>
          <a href="/roadmap" class="px-4 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">
            üî≠ Roadmap
          </a>
        </div>
      </div>

      <!-- Version History -->
      <div class="space-y-8">
        <!-- v1.0.0 - Current Release -->
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/30 rounded-lg p-8 border border-blue-200 dark:border-blue-700">
          <div class="flex items-center mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-600 text-white mr-3">
              v1.0.0
            </span>
            <span class="text-gray-600 dark:text-gray-400">July 12, 2025</span>
            <span class="ml-3 inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
              Current Release
            </span>
          </div>
          
          <h2 class="text-2xl font-semibold mb-4 text-blue-800 dark:text-blue-200">
            üéâ Initial Public Launch
          </h2>
          
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            The first public release of SalesTag, featuring core conversation capture, AI tagging, and analytics capabilities.
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">‚ú® New Features</h4>
              <ul class="space-y-1 text-gray-700 dark:text-gray-300 text-sm">
                <li class="flex items-start">
                  <span class="text-green-600 mr-2 mt-0.5">‚úÖ</span>
                  <span>SalesTag Vault for conversation storage</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-600 mr-2 mt-0.5">‚úÖ</span>
                  <span>Live metrics dashboard with Supabase</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-600 mr-2 mt-0.5">‚úÖ</span>
                  <span>Responsive waitlist subscription form</span>
                </li>
                <li class="flex items-start">
                  <span class="text-green-600 mr-2 mt-0.5">‚úÖ</span>
                  <span>Global CTA conversion system</span>
                </li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">üõ†Ô∏è Technical</h4>
              <ul class="space-y-1 text-gray-700 dark:text-gray-300 text-sm">
                <li class="flex items-start">
                  <span class="text-blue-600 mr-2 mt-0.5">‚Ä¢</span>
                  <span>Full dark mode with Tailwind CSS</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-600 mr-2 mt-0.5">‚Ä¢</span>
                  <span>JSON-LD schema for SEO optimization</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-600 mr-2 mt-0.5">‚Ä¢</span>
                  <span>Astro static site generation</span>
                </li>
                <li class="flex items-start">
                  <span class="text-blue-600 mr-2 mt-0.5">‚Ä¢</span>
                  <span>Mobile-responsive design</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Placeholder for future releases -->
        <div class="text-center py-12 border-2 border-dashed border-gray-200 dark:border-gray-600 rounded-lg">
          <div class="text-gray-400 dark:text-gray-500 mb-4">
            <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-500 dark:text-gray-400 mb-2">
            More Updates Coming Soon
          </h3>
          <p class="text-gray-400 dark:text-gray-500 mb-4">
            Check our roadmap to see what features are coming next.
          </p>
          <a href="/roadmap" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm">
            View Roadmap ‚Üí
          </a>
        </div>
      </div>

      <!-- Stats Section -->
      <div class="mt-16 bg-white dark:bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-200 dark:border-gray-600">
        <h3 class="text-xl font-semibold mb-6 text-gray-900 dark:text-gray-100 text-center">
          üìä Launch Stats
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="text-2xl font-bold text-blue-600 mb-1">13</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Pages Launched</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-green-600 mb-1">4</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Schema Types</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-purple-600 mb-1">100%</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">SEO Coverage</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-orange-600 mb-1">95%</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Launch Ready</div>
          </div>
        </div>
      </div>

      <!-- Feedback Section -->
      <div class="mt-12 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 rounded-lg p-8 text-center">
        <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100 flex items-center justify-center">
          üí≠ Release Feedback
        </h3>
        <p class="text-gray-700 dark:text-gray-300 mb-6">
          Experiencing issues or have suggestions for improvements? We'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/contact" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
            Report Issues
          </a>
          <a href="/subscribe" class="inline-flex items-center px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors font-medium">
            Join Community
          </a>
        </div>
      </div>

      <!-- Footer Note -->
      <div class="mt-16 text-center text-sm text-gray-500 dark:text-gray-400 border-t border-gray-200 dark:border-gray-600 pt-8">
        <em>Changelog updated with each release. For upcoming features, visit our <a href="/roadmap" class="text-blue-600 dark:text-blue-400 hover:underline">roadmap</a>.</em>
      </div>

      <!-- CTA Section -->
      <section class="mt-16 not-prose">
        <CallToActionBanner 
          title="Ready to Experience SalesTag?"
          description="Join forward-thinking sales teams who are already transforming their conversations into valuable insights."
          buttonText="Get Early Access"
        />
      </section>
    </div>
  </main>
</PageLayout> 