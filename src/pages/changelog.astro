---
import PageLayout from '~/layouts/PageLayout.astro';
import SeoMeta from '~/components/common/SeoMeta.astro';
import CallToActionBanner from '~/components/ui/CallToActionBanner.astro';
---

<SeoMeta 
  title="SalesTag Changelog & Roadmap ‚Äì Product Updates & Future Plans"
  description="Follow our product updates and see what's coming next. Track SalesTag's development progress and upcoming AI sales intelligence features."
  url="https://salestag.io/changelog"
  image="/og/changelog.jpg"
  schemaType="WebPage"
/>

<PageLayout>
  <main class="px-4 py-16 mx-auto max-w-4xl">
    <div class="prose prose-lg max-w-none dark:prose-invert">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-6 flex items-center justify-center">
          üöÄ SalesTag Changelog
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Stay updated with the latest features, improvements, and fixes.
        </p>
      </div>

      <!-- Current Version -->
      <section class="mb-16">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/30 rounded-lg p-8 border border-blue-200 dark:border-blue-700">
          <div class="flex items-center mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-600 text-white mr-3">
              v1.0.0
            </span>
            <span class="text-gray-600 dark:text-gray-400">2025-07-12</span>
          </div>
          
          <h2 class="text-2xl font-semibold mb-4 text-blue-800 dark:text-blue-200">
            üéâ Initial Public Launch
          </h2>
          
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>Initial public launch of SalesTag Vault</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>Global dark mode with full Tailwind support</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>Live <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-sm">/metrics</code> dashboard connected to Supabase</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>Responsive <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-sm">/subscribe</code> waitlist form</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>CTA system with conversion funnel optimization</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-600 mr-2 mt-1">‚úÖ</span>
              <span>JSON-LD schema + SEO polish sitewide</span>
            </li>
          </ul>
        </div>
      </section>

      <hr class="border-gray-300 dark:border-gray-600 my-16">

      <!-- Roadmap -->
      <section>
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold mb-6 flex items-center justify-center">
            üî≠ SalesTag Roadmap
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Here's what we're working on next:
